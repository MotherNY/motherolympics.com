@import 'variables'

/* 1em = 16px */



/* 1440px */
$yellowTransition = translate(267%, -100%)
$blueTransition = translate(10%, 5%)
$redTransition = translate(0%, 0%)
@media only screen and (max-width: 90em)

  .triangle.yellow
    normTransform($yellowTransition)


  
/* 1024px */
$yellowTransition = translate(267%, -100%)
$blueTransition = translate(10%, 5%)
@media only screen and (max-width: 64em)

  .triangle.yellow
    normTransform($yellowTransition)



/* 896px */
$yellowTransition = translate(205%, -100%) 

@media only screen and (max-width: 56em)

  .triangle.yellow
    normTransform($yellowTransition)

/* 768px */
$yellowTransition = translate(185%, -100%) 
@media only screen and (max-width: 48em)

  .triangle.yellow
    normTransform($yellowTransition)

  h2
    font-size 2.2em
    line-height 1

  h3
    font-size 1.1em


/* 640px */
$yellowTransition = translate(125%, -100%) scale(0.75,0.75)
$redTransition = translate(0%, 0%) scale(0.75,0.75)
@media only screen and (max-width: 40em)

  #who-container
    padding-top 12%



/* 480px */
$yellowTransition = translate(25%, -100%) scale(0.5, 0.5)
$redTransition = translate(25%, 0%) scale(0.5,0.5)
@media only screen and (max-width: 30em)

  #container
    margin 5% auto 0

  h2
    font-size 1.6em
  

/* 320px */
$yellowTransition = translate(10%, -100%) scale(0.5, 0.5)
$redTransition = translate(12%, 0%) scale(0.5,0.5)
@media only screen and (max-width: 20em)

  .triangle.yellow
    normTransform($yellowTransition)




